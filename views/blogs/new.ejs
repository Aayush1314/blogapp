<%- include("../partials/header") %>

<div class="ui main text container segment">
	<div class="ui huge header">
		Add New Blog
		<form class="ui form"action="/blogs" method="POST">
			<div class="field">
				<label>Title</label>
				<input type="text" placeholder="Title" name="blogs[title]">
			</div>
			<div class="field">
				<label>Image URL</label>
				<input type="text" placeholder="Image URL" name="blogs[img]">
			</div>
			<div class="field">
				<label>Body</label>
				<textarea name="blogs[body]" required></textarea>
			</div>
			<div class="field">
				<button class="ui secondary big button" type="submit">SUBMIT</button>
			</div>
		</form>
	</div>
</div>

