<%- include("../partials/header") %>

<div class="ui main text container segment">
	<div class="ui huge header">
		<%= blog.title %>
		<form class="ui form"action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
			<div class="field">
				<label>Title</label>
				<input type="text" value="<%= blog.title %>" name="blogs[title]">
			</div>
			<div class="field">
				<label>Image URL</label>
				<input type="text" value="<%= blog.img %>" name="blogs[img]">
			</div>
			<div class="field">
				<label>Body</label>
				<textarea name="blogs[body]" required><%= blog.body %></textarea>
			</div>
			<div class="field">
				<button class="ui secondary big button" type="submit">SUBMIT</button>
			</div>
		</form>
	</div>
</div>

<%- include("../partials/footer") %>